<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ic_fundoapp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Falta pouco \npara agendar o serviço!"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#444"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="35dp"
        android:text="Petshop:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblDH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblPS"
        android:layout_marginTop="25dp"
        android:text="Data e hora:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblDH"
        android:layout_marginTop="25dp"
        android:text="Serviço:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblS"
        android:layout_marginTop="25dp"
        android:text="Pet selecionado:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblP"
        android:layout_marginTop="25dp"
        android:text="Serviço adicional:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblAdd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Valor Total:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblPetshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblDH"
        android:layout_centerInParent="true"
        android:layout_marginLeft="8dp"
        android:text="Erro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/lblDataHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblS"
        android:layout_centerInParent="true"
        android:layout_marginLeft="8dp"
        android:text="Erro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblS"
        android:layout_centerInParent="true"
        android:layout_marginLeft="8dp"
        android:text="Erro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/lblPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblP"
        android:layout_centerInParent="true"
        android:layout_marginLeft="8dp"
        android:text="Erro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/lblServicoAdicional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblAdd"
        android:layout_centerInParent="true"
        android:layout_marginLeft="8dp"
        android:text="Erro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/lblValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblV"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Erro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblValor"
        android:layout_marginTop="35dp"
        android:background="#ccc"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="Forma de pagamento:"
            android:textColor="@color/text"
            android:textSize="16dp" />

        <RadioGroup
            android:id="@+id/grPagamento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbDinheiro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dinheiro" />

            <RadioButton
                android:id="@+id/rbDebito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Débito" />

            <RadioButton
                android:id="@+id/rbCredito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Crédito" />
        </RadioGroup>

    </LinearLayout>
    <!-- <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/linear"
         android:layout_marginBottom="20dp"
         android:background="#ccc">
         <RadioButton
             android:text="Cartão de crédito"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/rbCartao"
             android:layout_weight="1" />
         <RadioButton
             android:text="Pagar na hora do serviço"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/rbDepois"
             android:layout_weight="1" />
     </LinearLayout> -->
    <Button
        android:id="@+id/btnAgendar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:background="@color/verdePrincipal"
        android:text="Agendar!"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAgendar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@color/verdePrincipal"
        android:text="Refazer agendamento"
        android:textColor="#fff"
        android:textSize="15dp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_fundoapp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@mipmap/ic_usuario"
        app:srcCompat="@color/cardview_shadow_end_color" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSexo"
        android:layout_alignStart="@+id/txtSexo"
        android:layout_below="@+id/textView25"
        android:background="@color/menuBackground"
        android:text="gabriel.o_santos@yahoo.com.br"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView24"
        android:background="@color/menuBackground"
        android:text="Gabriel Santos"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView29"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtCelular"
        android:layout_marginTop="20dp"
        android:background="@color/servBackground"
        android:text="@string/enderecodois"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView29"
        android:background="@color/menuBackground"
        android:text="Rua tuiuiu, 21"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="19sp"
        />

    <TextView
        android:id="@+id/textView25"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/servBackground"
        android:text="@string/emaildois"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView26"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/servBackground"
        android:text="@string/sexo"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView26"
        android:layout_centerHorizontal="true"
        android:background="@color/menuBackground"
        android:text="Masculino"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView27"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSexo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/servBackground"
        android:text="@string/telefonedois"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSexo"
        android:layout_alignStart="@+id/txtSexo"
        android:layout_below="@+id/textView27"
        android:background="@color/menuBackground"
        android:text="(11)2745-8965"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView28"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTelefone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/servBackground"
        android:text="@string/celulardois"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCelular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtTelefone"
        android:layout_alignStart="@+id/txtTelefone"
        android:layout_below="@+id/textView28"
        android:background="@color/menuBackground"
        android:text="(11)98564-5648"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView24"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:background="@color/servBackground"
        android:text="@string/nomedois"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textStyle="bold" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_fundoapp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:id="@+id/lnFourth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lnThird"
        android:layout_marginTop="36dp">

        <EditText
            android:id="@+id/txtTelefone"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@color/campoBackground"
            android:ems="10"
            android:hint="@string/telefone"
            android:inputType="phone"
            android:paddingTop="5dp"
            android:textColor="@color/text"
            android:textColorHint="@color/textHint"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtCelular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@color/campoBackground"
            android:ems="10"
            android:hint="@string/celular"
            android:inputType="phone"
            android:paddingTop="5dp"
            android:textColor="@color/text"
            android:textColorHint="@color/textHint"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnSecond"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lnFirst"
        android:layout_marginTop="37dp">

        <EditText
            android:id="@+id/txtNumero"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/campoBackground"
            android:ems="7"
            android:hint="@string/numero"
            android:textColor="@color/text"
            android:textColorHint="@color/textHint"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtComplemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/campoBackground"
            android:ems="10"
            android:hint="@string/complemento"
            android:textColor="@color/text"
            android:textColorHint="@color/textHint"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnThird"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lnSecond"
        android:layout_marginTop="39dp">

        <EditText
            android:id="@+id/txtCEP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="2"
            android:background="@color/campoBackground"
            android:ems="10"
            android:hint="@string/cep"
            android:inputType="number"
            android:textColor="@color/text"
            android:textColorHint="@color/textHint"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtBairro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/campoBackground"
            android:ems="10"
            android:hint="@string/bairro"
            android:textColor="@color/text"
            android:textColorHint="@color/textHint"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnFirst"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp">

        <Spinner
            android:id="@+id/sp_Logradouro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="0" />

        <EditText
            android:id="@+id/txtEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/campoBackground"
            android:ems="10"
            android:hint="@string/endereco"
            android:inputType="textPostalAddress"
            android:paddingTop="5dp"
            android:textColor="@color/text"
            android:textColorHint="@color/textHint"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:visibility="gone"
        android:text="Salvar informações"
        android:textColor="#fff"
        android:textSize="18dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_fundoapp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nexbird.nexpet.activity.LoginActivity">

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtNome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:background="@color/campoBackground"
        android:backgroundTint="@color/campoBackground"
        android:clickable="true"
        android:editable="true"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="@color/text"
        android:textColorHint="@color/textHint"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/txtNome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:background="@color/campoBackground"
        android:backgroundTint="@color/campoBackground"
        android:ems="10"
        android:hint="@string/senha"
        android:inputType="textPassword"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="@color/text"
        android:textColorHint="@color/textHint"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtEmail"
        android:layout_marginTop="15dp"
        android:clickable="false"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/btnRecuperar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="0dp"
        android:textColor="@color/text"
        android:text="@string/esqueceu"
        android:textSize="18dp"
        android:textAlignment="center"
        android:clickable="true"
        />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:enabled="true"
        android:text="@string/entrar"
        android:textColor="@color/textWhite"
        android:textSize="20dp"
        android:layout_below="@+id/txtNome"
        android:layout_alignLeft="@+id/btnCadastrar"
        android:layout_alignStart="@+id/btnCadastrar" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:text="@string/cadastre"
        android:textColor="@color/textWhite"
        android:layout_below="@+id/btnEntrar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Falta pouco \npara agendar o serviço!"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="44dp"
        android:text="Pet shop:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_background_cache_hint_selector_material_dark"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblDH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblPS"
        android:layout_marginTop="32dp"
        android:text="Data e hora:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_background_cache_hint_selector_material_dark"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblDH"
        android:layout_marginTop="34dp"
        android:text="Serviço:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_background_cache_hint_selector_material_dark"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblS"
        android:layout_marginTop="34dp"
        android:text="Pet:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_background_cache_hint_selector_material_dark"
        android:visibility="visible" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/lblPetshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblDH"
        android:layout_marginLeft="8dp"


        android:text="Erro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/lblDataHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblS"
        android:layout_marginLeft="8dp"

        android:text="Erro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:id="@+id/lblServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblS"
        android:layout_marginLeft="8dp"
        android:layout_centerInParent="true"
        android:text="Erro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:id="@+id/lblPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblP"
        android:layout_marginLeft="8dp"
        android:layout_centerInParent="true"
        android:text="Erro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <Button
        android:id="@+id/btnAgendar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_centerInParent="true"
        android:background="@color/verdePrincipal"
        android:text="Agendar!"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAgendar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:background="@color/verdePrincipal"
        android:text="Refazer agendamento"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="15dp" /><![CDATA[

    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Preço final:"
        android:id="@+id/textView4"
        android:layout_below="@+id/lblP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/abc_background_cache_hint_selector_material_dark"
        android:layout_marginTop="32dp" />

    ]]>
</RelativeLayout>
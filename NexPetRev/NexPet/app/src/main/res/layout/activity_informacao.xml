<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:id="@+id/lnFirst"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <Spinner
            android:id="@+id/sp_Logradouro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="0" />

        <EditText
            android:id="@+id/txtEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#e1e0e0"
            android:ems="10"
            android:hint="Endereço"
            android:inputType="textPostalAddress"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnSecond"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnFirst"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/txtNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="2"
            android:background="#e1e0e0"
            android:ems="7"
            android:hint="Número"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtComplemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#e1e0e0"
            android:ems="10"
            android:hint="Complemento"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnThird"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnSecond"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/txtCEP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="2"
            android:background="#e1e0e0"
            android:ems="10"
            android:hint="CEP"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtBairro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e1e0e0"
            android:ems="10"
            android:hint="Bairro"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnFourth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnThird"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/txtTelefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="#e1e0e0"
            android:ems="10"
            android:hint="Telefone"
            android:inputType="phone"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtCelular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="#e1e0e0"
            android:ems="10"
            android:hint="Celular"
            android:inputType="phone"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>